{
  "name": "soundcut",
  "version": "1.0.0",
  "description": "Extract sound memes in the browser",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "npm run build:dev; npm run watch & nodemon --delay 2 --watch 'dist' --watch 'server' --watch 'shared/views' server/index.js;",
    "watch": "chokidar 'assets/**/*.scss' 'client/*.js' 'shared/**/*' -i 'shared/views/*' -c 'npm run build:dev'",
    "prettier": "prettier --write --trailing-comma es5 --single-quote --print-width 80 'shared/**/*.js' 'client/**/*.js' 'server/**/*.js' 'lib/**/*.js' 'webpack.config*.js' && npm run lint -- --fix",
    "lint": "eslint 'shared/**/*.js' 'server/**/*.js' 'client/**/*.js' 'lib/**/*.js'",
    "build:dev": "NODE_ENV=development npm run build;",
    "build:prod": "NODE_ENV=production npm run build; npm run webpack:sw",
    "build": "rm -rf dist; npm run views; npm run webpack:client;",
    "webpack:client": "webpack --config webpack.config.js",
    "webpack:sw": "webpack --config webpack.config.sw.js",
    "views": "./bin/generate-views.sh",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "echo \"Error: no release script specified\" && exit 1",
    "postinstall": "[ -z \"$VHOST\" ] && exit 0; npm run build:prod",
    "deploy": "ssh $SOUNDSLICE_DEPLOY deploy default.git"
  },
  "author": {
    "name": "Timoth√©e 'Tim' Pillard",
    "email": "tim@tpillard.fr",
    "url": "https://twitter.com/tpillard"
  },
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soundcut/app.git"
  },
  "keywords": [
    "sound",
    "cut",
    "audio",
    "mp3",
    "file",
    "slice",
    "meme",
    "progressive",
    "web",
    "app",
    "pwa"
  ],
  "bugs": {
    "url": "https://github.com/soundcut/app/issues"
  },
  "config": {
    "NODE_ENV": "development"
  },
  "dependencies": {
    "browser-id3-writer": "^4.1.0",
    "express": "^4.16.3",
    "flatstate": "^0.1.1",
    "glob": "^7.1.3",
    "hyperhtml-app": "^1.0.1",
    "hypermorphic": "^0.9.0",
    "js-yaml": "^3.13.0",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "mp3-parser": "^0.3.0",
    "multiparty": "^4.1.4",
    "pg": "^7.9.0",
    "punycode": "1.4.1",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.13.2"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.2",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "file-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "normalize.css": "^8.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.14.2",
    "prettier-plugin-html-template-literals": "^1.0.5",
    "sass-loader": "^7.1.0",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-manifest-plugin": "^2.0.4"
  }
}
